
# Trading AI - Variables de Entorno
# Copia este archivo como .env.local y configura los valores apropiados

# Yahoo Finance API Configuration
VITE_YAHOO_FINANCE_API_URL=https://query1.finance.yahoo.com/v8/finance/chart
VITE_YAHOO_FINANCE_CRUMB_URL=https://query2.finance.yahoo.com/v1/test/getcrumb
VITE_ENABLE_REAL_DATA=true

# API Keys para datos reales (opcional)
# VITE_ALPHA_VANTAGE_API_KEY=tu_clave_aqui
# VITE_IEX_CLOUD_API_KEY=tu_clave_aqui
# VITE_FINNHUB_API_KEY=tu_clave_aqui

# Configuración de la aplicación
# VITE_APP_NAME=Trading AI
# VITE_APP_VERSION=1.0.0

# URLs de APIs alternativas (opcional para datos en vivo)
# VITE_MARKET_DATA_API_URL=https://api.ejemplo.com
# VITE_NEWS_API_URL=https://newsapi.org/v2

# Configuración de desarrollo
# VITE_DEBUG_MODE=false
# VITE_MOCK_DATA=false

# Configuración de Machine Learning
# VITE_ML_MODEL_ENDPOINT=http://localhost:8000/predict
# VITE_ENABLE_ONLINE_LEARNING=true

# Configuración de validación
# VITE_VALIDATION_DELAY_CANDLES=5
# VITE_CONFIDENCE_THRESHOLD=0.7

# Yahoo Finance Settings
VITE_YAHOO_FINANCE_INTERVAL=1m
VITE_YAHOO_FINANCE_RANGE=7d
VITE_CORS_PROXY=https://api.allorigins.win/raw?url=

# Notas:
# - Las variables que empiezan con VITE_ son accesibles en el cliente
# - Yahoo Finance API es gratuita pero tiene limitaciones de rate limiting
# - Se recomienda usar un proxy CORS para evitar problemas de CORS
# - El proyecto funciona completamente con datos simulados si no se configuran estas variables
